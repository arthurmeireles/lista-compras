# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page


GET     /                                   controllers.HomeController.listar

GET     /inserir                            controllers.HomeController.inserir

+nocsrf
POST    /inserir                            controllers.HomeController.inserirProduto

GET    /remover/:produto                    controllers.HomeController.remover(produto : Int)

GET    /incrementar/:produto                controllers.HomeController.incrementar(produto : Int)
GET    /decrementar/:produto                controllers.HomeController.decrementar(produto : Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
